###########################################################
###################### General Setup ######################
###########################################################

### Paths #################################################
# 项目代码路径（每个站点不同）
APP_CODE_PATH_HOST=../www/site1/
APP_CODE_PATH_CONTAINER=/var/www
APP_CODE_CONTAINER_FLAG=:cached

# 数据存储路径（每个站点不同，实现数据隔离）
DATA_PATH_HOST=~/.laradock/data/site1

### Docker compose files ##################################
COMPOSE_FILE=docker-compose.multisite.yml
COMPOSE_PATH_SEPARATOR=:

# 项目名称（每个站点不同，用于容器命名和网络隔离）
COMPOSE_PROJECT_NAME=beikeshop_site1

### Drivers ################################################
VOLUMES_DRIVER=local
NETWORKS_DRIVER=bridge

### PHP Version ###########################################
PHP_VERSION=8.1

### Phalcon Version ###########################################
PHALCON_VERSION=4.0.5

### PHP Interpreter #######################################
PHP_INTERPRETER=php-fpm

### Docker Host IP ########################################
DOCKER_HOST_IP=10.0.75.1

### Remote Interpreter ####################################
PHP_IDE_CONFIG=serverName=beikeshop_site1

### PHP DOWNGRADEOPENSSL TLS AND SECLEVEL #################
PHP_DOWNGRADE_OPENSSL_TLS_AND_SECLEVEL=false

### Windows Path ##########################################
COMPOSE_CONVERT_WINDOWS_PATHS=1

### Environment ###########################################
CHANGE_SOURCE=false

### 镜像仓库配置 ###########################################
# 镜像仓库地址（所有站点共用）
# 例如：registry.cn-hangzhou.aliyuncs.com/your-namespace
REGISTRY=localhost

# 镜像标签版本（所有站点共用）
IMAGE_TAG=latest

###########################################################
################ Containers Customization #################
###########################################################

### WORKSPACE #############################################
WORKSPACE_TIMEZONE=Asia/Shanghai
WORKSPACE_SSH_PORT=2222

### NGINX #################################################
# 每个站点使用不同的端口号
NGINX_HOST_HTTP_PORT=8001
NGINX_HOST_HTTPS_PORT=4431
NGINX_HOST_LOG_PATH=./logs/nginx/
NGINX_SITES_PATH=./nginx/sites/
NGINX_PHP_UPSTREAM_CONTAINER=php-fpm
NGINX_PHP_UPSTREAM_PORT=9000
NGINX_SSL_PATH=./nginx/ssl/

### MYSQL #################################################
# 每个站点使用不同的端口号和数据库
MYSQL_VERSION=8.0
MYSQL_DATABASE=beikeshop_site1
MYSQL_USER=beikeshop
MYSQL_PASSWORD=secret123
MYSQL_PORT=33061
MYSQL_ROOT_PASSWORD=root123
MYSQL_ENTRYPOINT_INITDB=./mysql/docker-entrypoint-initdb.d

### REDIS #################################################
# 每个站点使用不同的端口号
REDIS_PORT=63791
REDIS_PASSWORD=redis_secret_site1

### PHP MY ADMIN ##########################################
# 每个站点使用不同的端口号
PMA_PORT=8011
PMA_MAX_EXECUTION_TIME=600
PMA_MEMORY_LIMIT=256M
PMA_UPLOAD_LIMIT=2G

### REDISWEBUI #########################################
# 每个站点使用不同的端口号
REDIS_WEBUI_USERNAME=admin
REDIS_WEBUI_PASSWORD=admin123
REDIS_WEBUI_CONNECT_HOST=redis
REDIS_WEBUI_CONNECT_PORT=6379
REDIS_WEBUI_PORT=79871
